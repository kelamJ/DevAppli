{% extends 'base.html.twig' %}

{% block title %}Détails de
	{{ plat.libelle }}
{% endblock %}

{% block body %}

	<main class="container my-3">
		<section class="row">
			<div class="col-12">
				<h1 class="mt-3">{{ plat.libelle }}</h1>
			</div>
            <div class="col-6">
                Images
            </div>
            <div class="col-6">
                <p>{{ plat.description }}</p>
                <p>Catégorie : {{ plat.categorie.libelle }}</p>
                <p>Prix : {{ plat.prix }} €</p>
            </div>
		</section>
	</main>

{% endblock %}
